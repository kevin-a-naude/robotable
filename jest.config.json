{
  "roots": [
    "<rootDir>/test/"
  ],
  "moduleNameMapper": {
    "^@src/(.*)": "<rootDir>/src/$1",
    "^@test/(.*)": "<rootDir>/test/$1"
  },
  "testMatch": [
    "**/__tests__/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  }
}
